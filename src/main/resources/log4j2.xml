<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Appenders>
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout disableAnsi="false"  pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue}"/>
</Console>
<File name="Api-testing-framework-logs" fileName="C:\Automationlogs\logs/apitestingframework.log">
<PatternLayout disableAnsi="false"  pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue}"/>
</File>
</Appenders>
<Loggers>
<Root level="info">
<AppenderRef ref="Console" level="info"/>
<AppenderRef ref="Api-testing-framework-logs" level="info"/>
</Root>
</Loggers>
</Configuration>